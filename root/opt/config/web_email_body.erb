<body>
<!-- Below loads the preload icon -->
<!-- <div id="preloader"></div> -->
  
<!--==========================
  Hero Section
============================-->
  <section id="hero">
    <div class="hero-container">
      <div class="wow fadeIn">
        <div class="hero-logo">
<!-- enter welcome section image below -->
          <img src="<%= $advanced['web']['title_image'] %>" alt="Now Showing">
        </div>
        
        <h1>Updated <%= I18n.l Time.now.to_date, format: :long  %> </h1>
        <h2><%= $advanced['web']['headline_title'] %> <span class="rotating"><%= $advanced['web']['headliners'] %></span></h2>
        <div class="actions">
          <a href="#movies" class="btn-services">New Movies</a>
          <a href="#episodes" class="btn-services">New Episodes</a>
          <a href="#seasons" class="btn-services">New Seasons</a>

        </div>
      </div>
    </div>
  </section>
  
<!--==========================
  Header Section
============================-->
  <header id="header">
    <div class="container">
    
<!-- Insert link to logo below -->
      <div id="logo" class="pull-left">
        <a href="#hero"><img src="<%= $advanced['web']['logo'] %>" alt="PLEX"></a>
        <!-- Uncomment below if you prefer to use text -->
        <!--<h1><a href="#hero">Header 1</a></h1>-->
      </div>
        
      <nav id="nav-menu-container">
        <ul class="nav-menu">
          <li class="menu-active"><a href="#hero">Home</a></li>
          <li><a href="#movies">New Movies</a></li>
          <li><a href="#episodes">New Episodes</a></li>
          <li><a href="#seasons">New Seasons</a></li>

   
        </ul>
      </nav><!-- #nav-menu-container -->
    </div>
  </header><!-- #header -->
    
<!--==========================
  Movie Section
============================-->
 <section id="movies" class="movies">
<!-- start of new movies -->
<% if movies != [] %>

  
<div class="container wow fadeInUp">
      
  <div class="row">
        
    <div class="col-md-12">
    
<!-- header of New Movies section -->
<br>
<h5 class="section-title"><%= I18n.t :new_movies %></h5>
          
<div class="section-title-divider"></div>

<!-- Place text below between P tag for text under section header -->           
<p class="section-description">  </p>
        
     </div>
      
  </div>
 


     
<div class="row">

<!-- start loop here -->

<% movies.each do |movie| %> 

  <div class="col-md-3">
      <a class="portfolio-item" style="background-image: url(<%= movie[:image] %>);" href="<%= movie[:imdb] %>">
    
    <div class="details">
              <h4><%= movie[:title] %> (<%= movie[:date] %>) </h4>
		<h5 class="bold"><%= movie[:tagline] %></h5>
              <span class="limittext"><%= movie[:synopsis] %></span>
             
    </div>
    
      </a>

</div> 
<% end %>
</div>
<% end %>

</div> 

</section>






<!--==========================
  New TV Shows Section
============================-->
 <section id="episodes" class="movies">
<!-- start new episodes here -->						
<% if new_episodes != [] %>

<div class="container wow fadeInUp">
      
  <div class="row">
        
    <div class="col-md-12">
    
<!-- header of New TV Show section -->
<h5 class="section-title">

<%= I18n.t :new_episodes%>

</h5>
          
<div class="section-title-divider"></div>

<!-- Place text below between P tag for text under section header -->           
<p class="section-description">  </p>
        
     
</div>
      
</div>
 


     
<div class="row">

<!-- start new episodes loop here -->
<% new_episodes.each do |episode| %>

  
<div class="col-md-3">
      
<a class="portfolio-item" style="background-image: url(
<%= episode[:image] %>);" href="<%= episode[:imdb] %>">
    
    
<div class="details">
              
<h4><%= episode[:series_name] %></h4>
		
<h5 class="bold">
<%= episode[:episode_number] %> - <%= episode[:title] %>
</h5>
              
<span class="limittext"><%= episode[:synopsis] %></span>
             
    </div>
    
      </a>

</div> 
<% end %>
</div>
<% end %>

</div> 

</section>




<!--==========================
  New TV Seasons Section
============================-->
 <section id="seasons" class="movies">
<!-- start New seasons -->

<% if new_seasons != [] %>

<div class="container wow fadeInUp">
      
  <div class="row">
        
    <div class="col-md-12">
    
<!-- header of New TV seasons section -->
<h5 class="section-title">

<%= I18n.t :new_seasons %>:


</h5>
          
<div class="section-title-divider"></div>

<!-- Place text below between P tag for text under section header -->          
<p class="section-description"> </p>
        
     
</div>
      
</div>
 


     
<div class="row">

<!-- start new seasons loop here -->
<% new_seasons.each do |season| %>

  
<div class="col-md-3">
      
<a class="portfolio-item" style="background-image: url(
<%= season[:image] %>);" href="<%= season[:imdb] %>">
    
    
<div class="details">
              
<h4><%= season[:series_name] %></h4>
		
<h5 class="bold">
<%= I18n.t :seasons, count: season[:season].length %><%= season[:season].min %>-<%= season[:season].max %>
</h5>
              
<span class="limittext"><%= season[:synopsis] %></span>
             
    </div>
    
      </a>

</div> 
<% end %>
</div>
<% end %>

</div> 

</section>

    
<!--==========================
  Footer
============================--> 
  <footer id="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="copyright">
              <%= $advanced['web']['footer'] %>
            </div>
            <div class="credits">
			    <br>
			     <%= I18n.t :credits_sentence %><br><br>
            </div>
          </div>
        </div>
      </div>
  </footer>
  
  <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    
